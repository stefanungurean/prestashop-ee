{
  "name": "wirecard/prestashop-ee",
  "description": "Prestashop plugin for Wirecard Payment Processing Gateway",
  "license": "GPL-3.0-only",
  "minimum-stability": "beta",
  "prefer-stable": true,
  "require": {
    "php": ">=5.6",
    "wirecard/payment-sdk-php": ">=1.0.11"
  },
  "require-dev": {
    "phpunit/phpunit": "5.3.5",
    "squizlabs/php_codesniffer": "^2.7"
  },
  "type": "shopsystem-plugin",
  "scripts": {
    "upload-coverage": "coveralls -v",
    "cs-check": "phpcs --standard=phpcs.xml .",
    "cs-fix": "phpcbf --standard=phpcs.xml .",
    "test": "phpunit --colors=always",
    "test-coverage": "phpunit --colors=always --coverage-clover clover.xml"
  }
}